{
    "name": "pingplop",
    "version": "0.0.3",
    "author": "Aris Ripandi <pingplop@skiff.com> (https://github.com/pingplop)",
    "license": "AGPL-3.0-or-later",
    "type": "module",
    "scripts": {
        "build": "pnpm build:css && pnpm build:js",
        "build:js": "swc ./crates/handler/templates/assets/js/app.js -o ./crates/handler/static/main.js",
        "build:css": "tailwindcss -m -i ./crates/handler/templates/assets/css/styles.css -o ./crates/handler/static/styles.css",
        "docs:dev": "(cd docs && mintlify dev)",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "preinstall": "pnpm dlx only-allow pnpm",
        "prepare": "husky install",
        "check": "biome check --apply .",
        "format": "biome format . --write",
        "lint": "biome lint --apply .",
        "test": "echo \"Error: no test specified\" && exit 0"
    },
    "dependencies": {
        "alpinejs": "^3.13.3",
        "htmx.org": "^1.9.10"
    },
    "devDependencies": {
        "@biomejs/biome": "1.4.1",
        "@egoist/tailwindcss-icons": "^1.7.1",
        "@iconify-json/lucide": "^1.1.150",
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.102",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "autoprefixer": "^10.4.16",
        "husky": "^8.0.3",
        "mintlify": "^4.0.89",
        "npm-check-updates": "^16.14.12",
        "postcss": "^8.4.32",
        "postcss-import": "^15.1.0",
        "postcss-load-config": "^5.0.2",
        "tailwindcss": "^3.4.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "browserslist": [
        "> 0.5%",
        "not IE 11"
    ]
}
