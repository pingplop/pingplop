{
    "name": "pingplop",
    "version": "0.0.3",
    "author": "Aris Ripandi <pingplop@skiff.com> (https://github.com/pingplop)",
    "license": "AGPL-3.0-or-later",
    "type": "module",
    "scripts": {
        "build": "wireit",
        "build:web": "wireit",
        "docs:dev": "(cd docs && mintlify dev)",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "preinstall": "pnpm dlx only-allow pnpm",
        "prepare": "husky install",
        "check": "biome check --apply .",
        "format": "biome format . --write",
        "lint": "biome lint --apply .",
        "test": "echo \"Error: no test specified\" && exit 0"
    },
    "wireit": {
        "build": {
            "command": "cargo build --release",
            "dependencies": [
                "build:web"
            ]
        },
        "build:web": {
            "command": "node ./esbuild.config.js"
        }
    },
    "dependencies": {
        "alpinejs": "^3.13.3",
        "htmx.org": "^1.9.10"
    },
    "devDependencies": {
        "@biomejs/biome": "1.4.1",
        "@egoist/tailwindcss-icons": "^1.7.1",
        "@iconify-json/lucide": "^1.1.150",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "autoprefixer": "^10.4.16",
        "esbuild-style-plugin": "^1.6.3",
        "esbuild": "^0.19.11",
        "husky": "^8.0.3",
        "mintlify": "^4.0.89",
        "npm-check-updates": "^16.14.12",
        "postcss-import": "^15.1.0",
        "postcss-load-config": "^5.0.2",
        "postcss": "^8.4.32",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss": "^3.4.0",
        "wireit": "^0.14.1"
    },
    "browserslist": [
        "> 0.5%",
        "not IE 11"
    ]
}
